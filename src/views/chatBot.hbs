<style>
    form {
        display: flex;
        flex-direction: column;
        max-width: 600px;
        margin: 0 auto;
        padding: 20px;
        border: 1px solid #ccc;
        border-radius: 10px;
        background-color: #f9f9f9;
    }

    label, textarea, input {
        margin-bottom: 15px;
    }

    textarea {
        resize: vertical;
        padding: 10px;
        font-size: 16px;
    }

    input[type="submit"] {
        padding: 10px 20px;
        font-size: 16px;
        color: #fff;
        background-color: #007bff;
        border: none;
        border-radius: 5px;
        cursor: pointer;
    }

    input[type="submit"]:hover {
        background-color: #0056b3;
    }

    .response {
        max-width: 600px;
        margin: 20px auto;
        padding: 20px;
        border: 1px solid #ccc;
        border-radius: 10px;
        background-color: #f1f1f1;
    }

    .response p {
        margin: 0;
    }
</style>

<form action="/chat/{{patient.id}}" method="POST">
    <label for="chatBot">Explica'ns el que et passa:</label>
    <textarea id="chatBot" name="chatBot" rows="4" cols="50"></textarea>
    <input type="submit" value="Enviar">
</form>

<div class="response">
    <h3>Resposta del chatbot:</h3>
    <p>{{response}}</p>
</div>
